<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tsukuba.gourmet.MainActivity"
    android:background="@drawable/aki2">
    <!--#36494E-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"
        android:layout_alignParentStart="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="つくばグルメなう！"
                android:id="@+id/text1"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textColor="#1E3231" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="今日の気分は？？"
                android:id="@+id/text2"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#1E3231"
                android:textIsSelectable="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:weightSum="5"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView"
                    android:src="@drawable/tukutuku5"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="今日の気分は？"
                    android:id="@+id/textView" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="全部"
                    android:id="@+id/button"
                    android:onClick="all"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_botton"
                    android:textColor="#1E3231"
                    android:singleLine="false"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="ラーメン"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:onClick="ramen"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_botton"
                    android:textColor="#1E3231" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="和食"
                    android:id="@+id/button3"
                    android:layout_weight="1"
                    android:onClick="wasyoku"
                    android:background="@drawable/shape_botton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="35dp"
                    android:textColor="#1E3231" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="洋食"
                    android:id="@+id/button4"
                    android:layout_weight="1"
                    android:onClick="italy"
                    android:background="@drawable/shape_botton"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#1E3231" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="中華"
                    android:id="@+id/button5"
                    android:layout_weight="1"
                    android:onClick="china"
                    android:background="@drawable/shape_botton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="35dp"
                    android:textColor="#1E3231" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
