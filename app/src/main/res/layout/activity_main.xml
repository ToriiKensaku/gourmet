<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tsukuba.gourmet.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="つくばグルメなう！"
                android:id="@+id/text1"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="今日の気分は？？"
                android:id="@+id/text2"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:weightSum="6"
            android:layout_margin="15dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="何でもいいから全部"
                android:id="@+id/button"
                android:layout_weight="1"
                android:onClick="all" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="ラーメン"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:onClick="ramen" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="定食屋さん"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:onClick="teisyoku" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="イタリアン"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:onClick="italy" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="ファーストフード"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:onClick="fastfood" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="カフェ"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:onClick="cafe" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
